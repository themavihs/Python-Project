name = input("Type your name: ")
print("Welcome", name, "to this adventure!!")

answer = input("You are on a dirt road, it has come to an end and you can go left or right. Which way would you like to go? ").lower()

if answer == 'left':
    a2 = input("You come to a river, you can walk around it or swim across? Type walk to walk around and swim to swim across: ")
    
    if a2 == "swim":
        print("You swam across and were eaten by an alligator.")
        
        
    elif a2 == "walk":
        print("You waled for many miles, ran out of water and you lost the game.")
           
    else:  
        print('Not a valid option you lose.')  
        
    
elif answer == 'right':
    a3 = input("You come to a bridge, it looks woobly, do you want to cross it or head back (cross/back) ?") 
    
    
    if a3 == "back":
        print("You go back and lose.")
    
    elif a3 == "cross":
        a3 = input("You cross the bridge and meet a stranger. Do you talk to them(yes/no)? ")
        
        
    if a3 == "yes":
        print("You talk to the stranger and they give you the map for the treasure. You win.")
      
    elif a3 == "no":
        print("You ignored the stranger and lost the chance of getting the map for treasure.")
        
        
    else:
         print('Not a valid option you lose.')

else:
    print('Not a valid option you lose.')
    
    
    
print("Thank you for playing the game", name)
